<Window x:Class="Pong.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pong"
        mc:Ignorable="d"
        Background="Black"
        Title="SettingsWindow" Height="400" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
            <StackPanel x:Name="panel" Orientation="Vertical"/>
        </ScrollViewer>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
        <Button x:Name="Back" Content="Back" Width="100" Height="50" Foreground="White" Background="Transparent" FontSize="18"/>
            <Button x:Name="Reset" Content="Reset" Width="100" Height="50" Foreground="White" Background="Transparent" FontSize="18"/>
            <Button x:Name="Save" Content="Save" Width="100" Height="50" Foreground="White" Background="Transparent" FontSize="18"/>
    </StackPanel>
    </Grid>
</Window>
