<Window x:Class="Pong.GameModeSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pong"
        mc:Ignorable="d"
        Background="Black"
        Title="Select Game Mode" Height="450" Width="500">
    <StackPanel Orientation="Vertical">
        <TextBlock Text="Select Game Mode" FontSize="48" Margin="0,0,0,30" Foreground="White" FontWeight="UltraBold" HorizontalAlignment="Center">
            <TextBlock.Effect>
                <DropShadowEffect ShadowDepth="0" Color="Black" BlurRadius="10"/>
            </TextBlock.Effect>
        </TextBlock>
        <Button x:Name="SelNormal" Width="300" Content="Normal Singleplayer" FontSize="24" Foreground="White" Background="Transparent"/>
        <Button x:Name="SelMulitplayerNormal" Width="300" Content="Normal Mulitplayer" FontSize="24" Foreground="White" Background="Transparent"/>
    </StackPanel>
</Window>
